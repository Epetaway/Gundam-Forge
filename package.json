{
  "name": "gundam-forge",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "npm run --workspaces --if-present lint",
    "qa": "npm run lint && npm run build",
    "build": "npm run --workspaces --if-present build",
    "dev:web": "npm --workspace @gundam-forge/web run dev",
    "sync-cards": "tsx scripts/sync-official-cards.ts",
    "sync-decks": "tsx scripts/sync-official-decks.ts",
    "sync-cards-xlsx": "tsx scripts/sync-cards-from-xlsx.ts",
    "fetch-assets": "tsx scripts/fetchCardAssets.ts",
    "fetch-hq-images": "tsx scripts/fetch-hq-images.ts",
    "validate-cards": "tsx scripts/validate-cards.ts",
    "build-card-catalog": "tsx scripts/build-card-catalog.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "playwright": "^1.58.2",
    "vitest": "^4.0.18",
    "xlsx": "^0.18.5"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "react-window": "^2.2.7"
  }
}
